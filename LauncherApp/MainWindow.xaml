<Window x:Class="LauncherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svg="http://sharpvectors.codeplex.com/runtime"
        xmlns:local="clr-namespace:LauncherApp"
        xmlns:vm="clr-namespace:LauncherApp.ViewModel"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Height="800" Width="1240"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="AppTracker"
        DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
        >
    <!-- <Window.DataContext> -->
    <!--     <vm:VmAppList></vm:VmAppList> -->
    <!-- </Window.DataContext> -->
    
    <Border Background="#010B2F" CornerRadius="12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
       <Grid>
        <!-- Заголовочная панель -->
        <Grid Height="56" VerticalAlignment="Top" Background="#010B2F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
           
            <StackPanel 
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0 0 10 0">
                
                <Button 
                    Style="{StaticResource MinimizeButtonStyle}"
                    Content="/assets/svg/minus.svg"
                    Click="MinimizeButton_Click"
                    Margin="0 0 10 0"/>
                
                <Button 
                    Style="{StaticResource CloseButtonStyle}"
                    Content="/assets/svg/close.svg"
                    Click="CloseButton_Click"/>
            </StackPanel>
            <Border 
                Grid.Column="0"
                Background="Transparent"
                MouseDown="HeaderBorder_MouseDown">
                <Grid>
                    <svgc:SvgViewbox 
                        Source="assets/svg/menu.svg" 
                        Width="24" 
                        Height="24"  
                        HorizontalAlignment="Left" 
                        Margin="20 0 0 0"/>
                    
                    <TextBlock 
                        Text="AppTracker" 
                        FontSize="20"
                        Foreground="White"
                        VerticalAlignment="Center"
                        Margin="54 0 0 0"/>
                    
                    <TextBlock  
                        Text="Избранное"
                        FontSize="20"
                        Foreground="White"
                        FontFamily="Arial"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Panel.ZIndex="1">
                        <Button Content="Избранное" 
                                Command="{Binding NavigateToFavoriteCommand}" Style="{StaticResource NavButtonStyle}"  CommandParameter="{Binding }"/>
                        <Button Content="Все приложения" 
                                Command="{Binding NavigateToAllAppsCommand}" Style="{StaticResource NavButtonStyle}"
                                CommandParameter="{Binding }"
                                />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Frame Margin="0 56 0 0" Content="{Binding PageSource}" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Window>
