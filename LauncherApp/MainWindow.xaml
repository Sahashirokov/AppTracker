<Window x:Class="LauncherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svg="http://sharpvectors.codeplex.com/runtime"
        xmlns:local="clr-namespace:LauncherApp"
        xmlns:vm="clr-namespace:LauncherApp.ViewModel"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Height="800" Width="1240"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Window.DataContext>
        <vm:VmAppList></vm:VmAppList>
    </Window.DataContext>
    
    <Border Background="#010B2F" CornerRadius="12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
       <Grid>
        <!-- Заголовочная панель -->
        <Grid Height="56" VerticalAlignment="Top" Background="#010B2F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel 
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0 0 10 0">
                
                <Button 
                    Style="{StaticResource MinimizeButtonStyle}"
                    Content="/assets/svg/minus.svg"
                    Click="MinimizeButton_Click"
                    Margin="0 0 10 0"/>
                
                <Button 
                    Style="{StaticResource CloseButtonStyle}"
                    Content="/assets/svg/close.svg"
                    Click="CloseButton_Click"/>
            </StackPanel>
            <Border 
                Grid.Column="0"
                Background="Transparent"
                MouseDown="HeaderBorder_MouseDown">
                <Grid>
                    <svgc:SvgViewbox 
                        Source="assets/svg/menu.svg" 
                        Width="24" 
                        Height="24"  
                        HorizontalAlignment="Left" 
                        Margin="20 0 0 0"/>
                    
                    <TextBlock 
                        Text="AppTracker" 
                        FontSize="20"
                        Foreground="White"
                        VerticalAlignment="Center"
                        Margin="54 0 0 0"/>
                    
                    <TextBlock  
                        Text="Избранное"
                        FontSize="20"
                        Foreground="White"
                        FontFamily="Arial"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
        <ListBox
            Margin="0 56 0 0"
            ItemsSource="{Binding AppCheckers}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto" Background="Transparent">
        
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
        
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="#24262D">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
        
                        <Button Grid.Column="0"
                                Content="{Binding IsRunning,Converter={StaticResource BoolToStartTextConverter}}"
                                Command="{Binding DataContext.ToggleCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                                CommandParameter="{Binding }"
                                Style="{StaticResource CommonStartStyle}"
        
                                />
        
                        <Button Grid.Column="1"
                                Content="Изменить путь" Command="{Binding DataContext.Edit, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource CommonEditPathStyle}"
                                CommandParameter="{Binding }"
                                />
        
                        <Button Grid.Column="2"
                                Content="Удалить" Command="{Binding DataContext.Remove, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                CommandParameter="{Binding }"
                                Style="{StaticResource CommonDeleteStyle}"
                                />
        
                        <TextBlock Grid.Column="3"  Padding="2px 10px 8px 2px">
            <Run Text="Название:"
                 FontFamily="Arial"
                 FontSize="16"
                 FontWeight="Bold"
                 Foreground="White"/>
            <Run Text="{Binding Id}"
                 TextDecorations=""
                 FontFamily="Segoe UI"
                 FontSize="14"
                 Foreground="White"/>
        </TextBlock>
        <TextBlock Grid.Column="4" Padding="2px 10px 8px 2px">
            <Run Text="Первый запуск: "
                 FontFamily="Arial"
                 FontSize="16"
                 FontWeight="Bold"
                 Foreground="White"/>
            <Run Text="{Binding DataContext.Name,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                 FontFamily="Segoe UI"
                 FontSize="14"
                 Foreground="White"/>
        </TextBlock>
        <TextBlock Grid.Column="5" Padding="2px 10px 8px 2px">
            <Run Text="Время последней сессии: "
                 FontFamily="Arial"
                 FontSize="16"
                 FontWeight="Bold"
                 Foreground="White"/>
            <Run Text="{Binding DataContext.Name,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                 FontFamily="Segoe UI"
                 FontSize="14"
                 Foreground="White"/>
        </TextBlock>
        <TextBlock Grid.Column="6" Padding="0px 10px 8px 0px">
            <Run Text="Всего времени: "
                 FontFamily="Arial"
                 FontSize="16"
                 FontWeight="Bold"
                 Foreground="White"/>
            <Run Text="{Binding DataContext.Name,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                 FontFamily="Segoe UI"
                 FontSize="14"
                 Foreground="White"/>
        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        
            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <Border>
                        <Grid>
                            <ScrollViewer x:Name="ScrollViewer">
                                <ItemsPresenter/>
                            </ScrollViewer>
                            <TextBlock Text="У вас нет выбранных элементов"
                                       Visibility="{Binding Items.IsEmpty,
                                           RelativeSource={RelativeSource AncestorType=ListBox},
                                           Converter={StaticResource BoolToVisibilityConverter}}"  FontFamily="Arial"
                                       FontSize="18"
                                       FontWeight="Bold" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
        
                        </Grid>
                    </Border>
                </ControlTemplate>
            </ListBox.Template>
        </ListBox>
        </Grid>
    </Border>
</Window>
