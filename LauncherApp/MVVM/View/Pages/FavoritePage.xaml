<Page x:Class="LauncherApp.MVVM.View.Pages.FavoritePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LauncherApp.MVVM.View.Pages"
      mc:Ignorable="d"
      Title="Favorite"
      DataContext="{Binding VmAppList,Source={StaticResource ViewModelLocator}}"
      >
    <Grid>
        <Control Style="{StaticResource ModernLoaderStyle}"
                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                 Foreground="White"/>
        <ListBox
            ItemsSource="{Binding AppM}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto" Background="Transparent">
        
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
        
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="#24262D">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="{Binding IsRunning,Converter={StaticResource BoolToStartTextConverter}}"
                                Command="{Binding DataContext.ToggleCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                                CommandParameter="{Binding }"
                                Style="{StaticResource CommonStartStyle}"
        
                                />

                        <Button Grid.Column="1"
                                Content="Изменить путь" Command="{Binding DataContext.Edit, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                                Style="{StaticResource CommonEditPathStyle}"
                                CommandParameter="{Binding }"
                                />

                        <Button Grid.Column="2"
                                Content="Удалить" Command="{Binding DataContext.Remove, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                                CommandParameter="{Binding }"
                                Style="{StaticResource CommonDeleteStyle}"
                                />

                        <TextBlock Grid.Column="3"  Padding="2px 10px 8px 2px">
            <Run Text="Название:"
                 FontFamily="Arial"
                 FontSize="16"
                 FontWeight="Bold"
                 Foreground="White"/>
            <Run Text="{Binding Name}"
                 TextDecorations=""
                 FontFamily="Segoe UI"
                 FontSize="14"
                 Foreground="White"/>
                        </TextBlock>
                        <TextBlock Grid.Column="4" Padding="2px 10px 8px 2px">
            <Run Text="Первый запуск: "
                 FontFamily="Arial"
                 FontSize="16"
                 FontWeight="Bold"
                 Foreground="White"/>
            <Run Text="{Binding StartTime, StringFormat={}{0:dd\\/MM\\/yyyy}}"
                 FontFamily="Segoe UI"
                 FontSize="14"
                 Foreground="White"/>
                        </TextBlock>
                        <TextBlock Grid.Column="5" Padding="2px 10px 8px 2px">
            <Run Text="Время последней сессии: "
                 FontFamily="Arial"
                 FontSize="16"
                 FontWeight="Bold"
                 Foreground="White"/>
            <Run Text="{Binding LastTime}"
                 FontFamily="Segoe UI"
                 FontSize="14"
                 Foreground="White"/>
                        </TextBlock>
                        <TextBlock Grid.Column="6" Padding="0px 10px 8px 0px">
            <Run Text="Всего времени: "
                 FontFamily="Arial"
                 FontSize="16"
                 FontWeight="Bold"
                 Foreground="White"/>
            <Run Text="{Binding TotalTime}"
                 FontFamily="Segoe UI"
                 FontSize="14"
                 Foreground="White"/>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <Border>
                        <Grid>
                            <ScrollViewer x:Name="ScrollViewer">
                                <ItemsPresenter/>
                            </ScrollViewer>
                            <TextBlock Text="У вас нет выбранных элементов"
                                       FontFamily="Arial"
                                       FontSize="18"
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       TextAlignment="Center" 
                                       VerticalAlignment="Center">
                                <TextBlock.Visibility>
                                    <MultiBinding Converter="{StaticResource AllTrueToVisibilityConverter}">
                                        <Binding Path="IsLoading" 
                                                 Converter="{StaticResource InvertBoolConverter}"/>
                                        <Binding Path="Items.IsEmpty" 
                                                 RelativeSource="{RelativeSource AncestorType=ListBox}"/>
                                    </MultiBinding>
                                </TextBlock.Visibility>
                            </TextBlock>

                        </Grid>
                    </Border>
                </ControlTemplate>
            </ListBox.Template>
        </ListBox>
    </Grid>
</Page>
